<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:background="#36a4ff"></View>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Introduction"
                            android:gravity="center"
                            android:fontFamily="@font/font1"
                            android:textSize="25dp"
                            ></TextView>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:background="#36a4ff"></View>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="30dp"></View>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="3dp"
                    >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:weightSum="2">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:padding="3dp"
                                    android:orientation="vertical">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Title and extent of operation of the Code"
                                            android:gravity="left"
                                            android:fontFamily="@font/font1"
                                            android:textSize="25dp"
                                            android:paddingLeft="20dp"
                                            ></TextView>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="210dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="#36a4ff"
                                    android:orientation="vertical">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="1"
                                            android:layout_weight="1"
                                            android:fontFamily="@font/font1"
                                            android:textColor="#FFFFFF"
                                            android:textSize="35dp"
                                            android:gravity="center"
                                            ></TextView>
                                </LinearLayout>
                        </LinearLayout>

                </androidx.cardview.widget.CardView>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="30dp"></View>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="3dp"
                            >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"

                                    android:orientation="horizontal"
                                    android:layout_gravity="center"
                                    android:weightSum="2">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:orientation="vertical">
                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="Punishment of offences committed within India"
                                                    android:gravity="left"
                                                    android:fontFamily="@font/font1"
                                                    android:textSize="25dp"
                                                    android:paddingLeft="20dp"
                                                    ></TextView>
                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="210dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="#36a4ff"
                                            android:orientation="vertical">
                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="2"
                                                    android:layout_weight="1"
                                                    android:fontFamily="@font/font1"
                                                    android:textColor="#FFFFFF"
                                                    android:textSize="35dp"
                                                    android:gravity="center"
                                                    ></TextView>
                                        </LinearLayout>
                                </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="30dp"></View>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="3dp"
                            >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"

                                    android:orientation="horizontal"
                                    android:layout_gravity="center"
                                    android:weightSum="2">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:orientation="vertical">
                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="Punishment of offences committed beyond, but which by law may be tried within, India"
                                                    android:gravity="left"
                                                    android:fontFamily="@font/font1"
                                                    android:textSize="25dp"
                                                    android:paddingLeft="20dp"
                                                    ></TextView>
                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="210dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="#36a4ff"
                                            android:orientation="vertical">
                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="3"
                                                    android:fontFamily="@font/font1"
                                                    android:textColor="#FFFFFF"
                                                    android:textSize="35dp"
                                                 android:gravity="center"
                                                    android:layout_weight="1"
                                                    ></TextView>
                                        </LinearLayout>
                                </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="30dp"></View>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="3dp"
                            >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"

                                    android:orientation="horizontal"
                                    android:layout_gravity="center"
                                    android:weightSum="2">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:orientation="vertical">
                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="Extension of Code to extra-territorial offences"
                                                    android:gravity="left"
                                                    android:fontFamily="@font/font1"
                                                    android:textSize="25dp"
                                                    android:paddingLeft="20dp"
                                                    ></TextView>
                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="210dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="#36a4ff"
                                            android:orientation="vertical">
                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="4"
                                                    android:fontFamily="@font/font1"
                                                    android:textColor="#FFFFFF"
                                                    android:textSize="35dp"
                                                    android:gravity="center"
                                                    android:layout_weight="1"
                                                    ></TextView>
                                        </LinearLayout>
                                </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="30dp"></View>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="3dp"
                            >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"

                                    android:orientation="horizontal"
                                    android:layout_gravity="center"
                                    android:weightSum="2">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:orientation="vertical">
                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text=" Certain laws not to be affected by this Act"
                                                    android:gravity="left"
                                                    android:fontFamily="@font/font1"
                                                    android:textSize="25dp"
                                                    android:paddingLeft="20dp"
                                                    ></TextView>
                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="210dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="#36a4ff"
                                            android:orientation="vertical">
                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="5"
                                                    android:fontFamily="@font/font1"
                                                    android:textColor="#FFFFFF"
                                                    android:textSize="35dp"
                                                    android:gravity="center"
                                                    android:layout_weight="1"
                                                    ></TextView>
                                        </LinearLayout>
                                </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="30dp"></View>

                </LinearLayout>
        </ScrollView>

</RelativeLayout>